        <td><%= meeting[1]["start_time"] %> </td>
        <td><%= meeting[1]["duraion"] %> </td>
        <td><%= link_to 'Show', course_path(meeting[0]) %></td>
        <td><%= link_to 'Remove from me from meeting', course_path(meeting[0]),
            data: {:confirm => 'Are you sure?'}, :method => :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>



